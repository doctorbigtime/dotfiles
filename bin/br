#!/bin/bash
max=$(cat /sys/class/backlight/intel_backlight/max_brightness)
bl=/sys/class/backlight/intel_backlight/brightness
if [[ $# -gt 0 ]]; then
    pct=$1
    [[ $pct -gt 100 ]] && pct=100
    printf "%.0f\n" $(bc <<< "scale=2; $max*($pct/100.0)") > $bl
else
    echo $(bc <<< "scale=2; $(cat $bl)/$max*100.0")
fi
